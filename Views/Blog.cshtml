@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}


    <!-- BLOG MAIN CONTENT -->
    <section class="blog-content blog-list">
        <div class="container">
            <div class="row">
                <!-- CONTENT -->
                <div class="col-md-10 col-md-offset-1">
                    <div class="content">

                       
                       @{
	var selection = CurrentPage.Site().FirstChild("Blog").Children("Blogpost");
}

	@foreach(var item in selection){
		
		
		<!-- POST -->
                        <div class="post">
                           
                            <div class="post-meta">
                                
                                <div class="post-date">
                                    @GlobalHelpers.FormattedDate(item.CreateDate.ToString())
                                </div>
                                
                            </div>
                            <div class="post-body">
     
                                <div class="post-title">
                                    <h2>@item.Title</h2>
                                </div>
                                
                            </div>
                        </div>
           <!-- END / POST -->					
	}


                        
                    </div>
                </div>
                <!-- END / CONTENT -->
            </div>
        </div>
    </section>
    <!-- BLOG MAIN CONTENT -->

							
							
							
							
							
							
							
							
							
						
						
						