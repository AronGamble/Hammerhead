@inherits Umbraco.Web.Mvc.UmbracoTemplatePage


@{ var selection = CurrentPage.Children.Where("Visible"); }

@if (selection.Any())
{
   
        foreach (var item in selection)
        {
			
			<!-- POST -->
            <div class="post">
                <div class="post-media">
                    <div class="/image-wrap">
                        <img src="/images/feature/400x300.gif" alt="">
                    </div>
                </div>
                <div class="post-body">
                    <span class="cat"><a href="#">Guitars</a></span>
                    <div class="post-title">
                        <h4>
                            <a href="#">@item.Manufacturer</a>
                        </h4>
                    </div>
                    <div class="post-meta">
                        <span class="post-date">@item.Model</span>
                    </div>
                </div>
            </div>
            <!-- END / POST -->																	                                   
        }
    
}							