@inherits Umbraco.Web.Mvc.UmbracoTemplatePage


@{ var selection = CurrentPage.VideoItems.Where("Visible"); }

@if (selection.Any())
{
   
        foreach (var item in selection)
        {
			
			<!-- POST -->
            <div class="post">
                <div class="post-media">
                    <div class="/image-wrap">
                        <img src="/ImageGen.ashx?image=@Umbraco.Media(@item.ImageFile.ToString()).Url&amp;width=400&amp;height=300" alt="">
                    </div>
                </div>
                <div class="post-body">
                    <span class="cat"><a href="#">Media</a></span>
                    <div class="post-title">
                        
                            <a target="_new" href="@item.VideoFile">Watch Now</a>
                       
                    </div>
                    <div class="post-meta">
                       <h4> <span class="post-date">@item.Name</span> </h4>
                    </div>
                </div>
            </div>
            <!-- END / POST -->																	                                   
        }    
}